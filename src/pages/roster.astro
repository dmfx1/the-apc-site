---
import BaseLayout from '../layouts/BaseLayout.astro';
import '../styles/global.css';
---

<BaseLayout>
  <section class="min-h-screen px-6 md:px-16 py-24 max-w-screen-xl mx-auto text-apc-black">
    <h1 class="text-4xl md:text-5xl font-bold mb-10 text-center">The Core</h1>
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
      <!-- Team Member 1 -->
      <div class="bg-white/80 p-6 rounded-xl bevel shadow-lg">
        <img src="/people/core/dom_storrs.png" alt="Dom Storrs" class="w-24 h-24 border-2 brightness-130 rounded-full mb-4 p-1" />
        <h2 class="text-xl font-semibold mb-2">Dom Storrs</h2>
        <p class="text-sm">Founder, Sound Designer & Mix Engineer. Dom leads the APC and ensures every project meets creative and technical standards.</p>
      </div>

      <!-- Team Member 2 -->
      <div class="bg-white/80 p-6 rounded-xl bevel shadow-lg">
        <img src="/people/core/brian_lane.png" alt="Brian Lane" class="w-24 h-24 border-2 rounded-full mb-4 p-1" />
        <h2 class="text-xl font-semibold mb-2">Brian Lane</h2>
        <p class="text-sm">Dialogue Editor with a sharp ear for performance, delivering clean and natural edits that elevate the voice.</p>
      </div>

      <!-- Team Member 3 -->
      <div class="bg-white/80 p-6 rounded-xl bevel shadow-lg">
        <img src="/people/core/richard_collins.png" alt="Richard Collins" class="w-24 h-24 object-cover border-2 rounded-full mb-4 p-1" />
        <h2 class="text-xl font-semibold mb-2">Richard Collins</h2>
        <p class="text-sm">Foley Artist with a passion for texture and realism, working across film, TV, and games.</p>
      </div>

      <!-- Team Member 4 -->
      <div class="bg-white/80 p-6 rounded-xl bevel shadow-lg">
        <img src="/people/core/owain_kelly.png" alt="Owain Kelly" class="w-24 h-24 object-cover border-2 rounded-full mb-4 p-1" />
        <h2 class="text-xl font-semibold mb-2">Owain Kelly</h2>
        <p class="text-sm">Foley Artist with a passion for texture and realism, working across film, TV, and games.</p>
      </div>

      <!-- Team Member 5 -->
      <div class="bg-white/80 p-6 rounded-xl bevel shadow-lg">
        <img src="/people/core/nick_granville_fall.png" alt="Nick Granville-Fall" class="w-24 h-24 object-cover border-2 rounded-full mb-4 p-1" />
        <h2 class="text-xl font-semibold mb-2">Nick Granville-Fall</h2>
        <p class="text-sm">Foley Artist with a passion for texture and realism, working across film, TV, and games.</p>
      </div>

      <!-- Team Member 6 -->
      <div class="bg-white/80 p-6 rounded-xl bevel shadow-lg">
        <img src="https://randomuser.me/api/portraits/men/6.jpg" alt="James Foley" class="w-24 h-24 object-cover border-2 rounded-full mb-4 p-1" />
        <h2 class="text-xl font-semibold mb-2">James Foley</h2>
        <p class="text-sm">Foley Artist with a passion for texture and realism, working across film, TV, and games.</p>
      </div>
    </div>

    <!-- Divider -->
    <hr class="my-16 border-t border-apc-grey-20" />

    <!-- Extended Network -->
    <h2 class="text-3xl md:text-4xl font-semibold mb-8 text-center">Our Extended Network</h2>
    <div class="space-y-4">
      <!-- Member Accordion 1 -->
      <details class="group bg-white/70 p-6 rounded-xl bevel shadow-md">
        <summary class="cursor-pointer font-semibold text-lg flex items-center justify-between">
          <span>Emily Tran – Sound Designer</span>
          <svg class="w-4 h-4 transition-transform duration-200 group-open:rotate-180" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" /></svg>
        </summary>
        <div class="mt-4 text-sm flex gap-4">
          <img src="https://placehold.co/64x64" alt="Emily Tran" class="w-16 h-16 rounded-full object-cover" />
          <p>Specialises in subtle, story-driven soundscapes for indie film and documentary. Available for freelance and long-term collaboration.</p>
        </div>
      </details>

      <!-- Repeat the same structure for 11 more members -->
      <details class="group bg-white/70 p-6 rounded-xl bevel shadow-md">
        <summary class="cursor-pointer font-semibold text-lg flex items-center justify-between">
          <span>Leon Wu – Music Editor</span>
          <svg class="w-4 h-4 transition-transform duration-200 group-open:rotate-180" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" /></svg>
        </summary>
        <div class="mt-4 text-sm flex gap-4">
          <img src="https://placehold.co/64x64" alt="Leon Wu" class="w-16 h-16 rounded-full object-cover" />
          <p>Experienced across commercials and short form content with a focus on pacing and transitions.</p>
        </div>
      </details>

      <!-- Add 10 more members here... -->
      <!-- You can duplicate and update the name, role, description, and image URL -->

    </div>
  </section>
</BaseLayout>
