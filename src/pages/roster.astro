---
import BaseLayout from '../layouts/BaseLayout.astro';
import '../styles/global.css';
---

<BaseLayout>
  <section class="min-h-screen px-6 md:px-16 py-24 max-w-screen-xl mx-auto text-apc-black">
    <h1 class="text-4xl md:text-5xl font-bold mb-10 text-center">The Team</h1>
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
      <!-- Team Member 1 -->
      <div class="bg-white/80 p-6 rounded-xl bevel shadow-lg">
        <h2 class="text-xl font-semibold mb-2">Dom Storrs</h2>
        <p class="text-sm">Founder, Sound Designer & Mix Engineer. Dom leads the APC and ensures every project meets creative and technical standards.</p>
      </div>

      <!-- Team Member 2 -->
      <div class="bg-white/80 p-6 rounded-xl bevel shadow-lg">
        <h2 class="text-xl font-semibold mb-2">Jane Doe</h2>
        <p class="text-sm">Dialogue Editor with a sharp ear for performance, delivering clean and natural edits that elevate the voice.</p>
      </div>

      <!-- Team Member 3 -->
      <div class="bg-white/80 p-6 rounded-xl bevel shadow-lg">
        <h2 class="text-xl font-semibold mb-2">John Smith</h2>
        <p class="text-sm">Foley Artist with a passion for texture and realism, working across film, TV, and games.</p>
      </div>

      <!-- Add more team members as needed -->
    </div>
  </section>
</BaseLayout>
